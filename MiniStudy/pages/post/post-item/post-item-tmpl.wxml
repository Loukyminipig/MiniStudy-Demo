<template name="postItemTmpl">
  <view class="post-container">
    <view class="post-author-date">
      <image src="{{avatar}}"></image>
      <text>{{date}}</text>
    </view>
    <text class="post-title">{{title}}</text>
    <image class="post-image" src="{{postImg}}" mode="aspectFill"></image>
    <text class="post-content">{{content}}</text>
    <view class="post-like">
      <image src="/images/icon/q1.jpg"></image>
      <text>{{readingNum}}</text>
      <image src="/images/icon/q2.jpg"></image>
      <text>{{collectionNum.array[0]}}</text>
      <image src="/images/icon/q3.jpg"></image>
      <text>{{commentNum}}</text>
    </view>
  </view>
</template>